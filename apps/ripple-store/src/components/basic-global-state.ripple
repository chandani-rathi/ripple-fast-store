import { NamedTrackedStore } from 'ripple-fast-store';

export component BasicGlobalState(){
    const count = NamedTrackedStore("Count", 0)
    <button onClick={() => {count.set(count.get() + 1)}} class="px-4 py-2 border rounded hover:bg-black hover:text-white">
        {"Count " + count.get()}
    </button>
}

export component CurrentCount(){
    const count = NamedTrackedStore("Count")
    <div>{"Current Count is " + count.get()}</div>
}